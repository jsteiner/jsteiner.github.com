#home {
  padding: 140px 0 0 80px;

  p {
    margin-top: 1.4em;
    font-size: 1.1em;
    font-weight: 300;
  }
}

/* Mobile */

@media handheld, only screen and (max-width: 767px) {
  body {
    font-size: 16px;
    -webkit-text-size-adjust: none;
  }

  #home {
    padding: 100px 0 0 40px;
  }
}
